    "knox": ">=0.8.9 <0.9.0",
    "wd": ">=0.2.15 <0.3.0",
    "saucelabs": ">=0.1.1 <0.2.0"
  },
  "devDependencies": {
    "browserify": ">=3.38.1 <4.0.0"
  },
  "scripts": {
    "test": "node runner.js test",
    "test:sauce": ". activate.sh; node test/sauce.js",
