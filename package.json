{
  "name": "jasminum",
  "version": "0.0.4",
  "description": "A light, modular, promissory, isomorphic Jasmine test scaffold clone",
  "keywords": [
    "jasmine",
    "test",
    "testing",
    "bdd",
    "promise",
    "isomorphic"
  ],
  "license" : "BSD-3-Clause",
  "main": "jasminum.js",
  "bin": {
    "jasminum": "runner.js",
    "jasminum-phantom": "phantom/runner.js"
  },
  "browser": {
    "./platform-reporter.js": "browser/reporter.js"
  },
  "dependencies": {
    "q": ">=1.5.1 <2.0.0",
